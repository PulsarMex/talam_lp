---
const policies = [
  {
    title: "Integración estratégica",
    description: "Incorporamos aspectos de Calidad, Seguridad, Salud y Medio Ambiente en todos los planes y actividades de la organización.",
    icon: "strategy",
  },
  {
    title: "Objetivos sostenibles",
    description: "Definimos y revisamos periódicamente objetivos y metas sostenibles en materia de QHSE.",
    icon: "target",
  },
  {
    title: "Prevención y protección",
    description: "Identificamos peligros y reducimos riesgos para proporcionar puestos de trabajo seguros y respetuosos con el medio ambiente.",
    icon: "shield",
  },
  {
    title: "Mejora continua",
    description: "Fomentamos la mejora continua mediante canales de comunicación eficaces con empleados, clientes y partes interesadas.",
    icon: "arrow-up",
  },
  {
    title: "Cumplimiento normativo",
    description: "Cumplimos con los requisitos del cliente, legislación vigente, códigos, normas y otros compromisos suscritos.",
    icon: "check-circle",
  },
  {
    title: "Capacitación y conciencia",
    description: "Difundimos conocimiento y creamos conciencia en nuestros empleados y colaboradores sobre QHSE.",
    icon: "users",
  },
];
---

<section id="politica-calidad" class="bg-white py-20">
  <div class="mx-auto max-w-7xl px-6 sm:px-8 lg:px-10">
    <div class="mb-12 space-y-4 text-center">
      <p class="text-md font-semibold uppercase tracking-wide text-blue-600">Nuestro compromiso</p>
      <h2 class="text-4xl font-extrabold tracking-tight text-slate-900 sm:text-5xl">
        Política de Calidad, Seguridad, Salud y Protección Ambiental
      </h2>
      <span class="mx-auto block h-1 w-16 rounded-full bg-blue-600"></span>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {policies.map((policy) => (
        <article class="group rounded-md border-2 border-gray-100 bg-white p-6 transition-all duration-300 hover:border-blue-600 hover:shadow-md">
          <div class="mb-4 flex items-center justify-center">
            <span class="flex h-16 w-16 items-center justify-center rounded-md bg-blue-100 text-blue-600 transition-all duration-300 group-hover:bg-blue-600 group-hover:text-white">
              {policy.icon === "strategy" && (
                <svg viewBox="0 0 24 24" class="h-8 w-8 transition-colors duration-300" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z" />
                </svg>
              )}
              {policy.icon === "target" && (
                <svg viewBox="0 0 24 24" class="h-8 w-8 transition-colors duration-300" fill="none" stroke="currentColor" stroke-width="1.6">
                  <circle cx="12" cy="12" r="7.5" />
                  <circle cx="12" cy="12" r="3.25" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 3.5V6m8.5 6h-2.5M12 18v2.5M6 12H3.5" />
                </svg>
              )}
              {policy.icon === "shield" && (
                <svg viewBox="0 0 24 24" class="h-8 w-8 transition-colors duration-300" fill="none" stroke="currentColor" stroke-width="1.6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
                </svg>
              )}
              {policy.icon === "arrow-up" && (
                <svg viewBox="0 0 24 24" class="h-8 w-8 transition-colors duration-300" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 15.75l7.5-7.5 7.5 7.5" />
                </svg>
              )}
              {policy.icon === "check-circle" && (
                <svg viewBox="0 0 24 24" class="h-8 w-8 transition-colors duration-300" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                </svg>
              )}
              {policy.icon === "users" && (
                <svg viewBox="0 0 24 24" class="h-8 w-8 transition-colors duration-300" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
                </svg>
              )}
            </span>
          </div>
          <h3 class="mb-2 text-center text-base font-semibold text-slate-900">{policy.title}</h3>
          <p class="m-0 text-center text-sm leading-relaxed text-slate-600">{policy.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>
