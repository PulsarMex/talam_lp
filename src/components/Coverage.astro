---
const locations = [
  {
    city: "Villahermosa",
    state: "Tabasco",
    description: "Cobertura completa en la región del sureste mexicano para operaciones petroleras.",
  },
  {
    city: "Veracruz",
    state: "Veracruz",
    description: "Presencia estratégica en la costa del Golfo de México para servicios de medición y equipos.",
  },
];
---

<section id="cobertura" class="relative flex min-h-160 flex-col justify-center overflow-x-hidden bg-blue-950 px-6 py-16 text-white sm:px-8 lg:min-h-180 lg:py-24 lg:px-10">
  <div class="absolute inset-x-0 top-0 z-10 h-40 overflow-hidden" aria-hidden="true">
    <svg class="absolute top-0 w-full h-full" viewBox="0 0 1440 160" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M0,0 L1440,0 L1440,35 L0,155 Z" fill="white" />
    </svg>
  </div>
  <div class="absolute inset-0 z-0 overflow-hidden" aria-hidden="true">
    <div class="absolute right-0 top-0 flex h-full w-full max-w-[90%] translate-y-8 items-center justify-end overflow-hidden md:max-w-[88%] lg:translate-y-10 lg:max-w-[86%]">
      <img
        src="/images/mexico.svg"
        alt="Mapa de México con cobertura en Tabasco y Veracruz"
        class="h-full min-h-80 w-full max-w-135 object-contain object-right opacity-55 sm:min-h-100 md:max-w-none"
      />
    </div>
  </div>
  <div class="relative z-10 mx-auto w-full max-w-7xl">
    <div class="max-w-xl space-y-8 pt-36 sm:pt-40 lg:pt-0">
      <div class="space-y-3 text-left">
        <p class="text-md font-semibold uppercase tracking-wide text-blue-400">Cobertura</p>
        <h2 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl">
          Presencia en el sureste de México
        </h2>
        <span class="block h-1 w-16 rounded-full bg-blue-500"></span>
        <p class="text-lg text-white/90 sm:text-xl">
          Desde el Golfo de México hacia el sureste, con bases en Villahermosa y Veracruz para la industria petrolera y de medición.
        </p>
      </div>

      <div class="grid gap-6 sm:grid-cols-2">
        {locations.map((location) => (
          <article class="group rounded-lg border-2 border-white/20 bg-white/10 p-6 backdrop-blur-sm transition-all duration-300 hover:border-blue-400 hover:bg-white/15">
            <div class="mb-4 flex items-center gap-4">
              <span class="flex h-12 w-12 items-center justify-center rounded-lg bg-blue-500/80 text-white transition-all duration-300 group-hover:bg-blue-500">
                <svg viewBox="0 0 24 24" class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                </svg>
              </span>
              <div>
                <h3 class="m-0 text-xl font-bold text-white">{location.city}</h3>
                <p class="m-0 text-sm text-blue-300">{location.state}</p>
              </div>
            </div>
            <p class="m-0 text-sm leading-relaxed text-white/80">{location.description}</p>
          </article>
        ))}
      </div>
    </div>
  </div>
</section>
