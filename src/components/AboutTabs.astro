---
const tabs = [
  {
    id: "quienes",
    label: "Quiénes somos",
    icon: "users",
  },
  {
    id: "mision",
    label: "Misión",
    icon: "target",
  },
  {
    id: "vision",
    label: "Visión",
    icon: "eye",
  },
  {
    id: "valores",
    label: "Valores",
    icon: "shield",
  },
];

const valores = [
  {
    title: "Calidad",
    description:
      "Compromiso con la excelencia en nuestros servicios y productos.",
  },
  {
    title: "Disciplina",
    description:
      "Organización basada en el cumplimiento responsable de procesos y respeto al cliente.",
  },
  {
    title: "Perseverancia",
    description:
      "Determinación para alcanzar objetivos incluso en contextos complejos o adversos.",
  },
  {
    title: "Seguridad",
    description:
      "Prioridad a la seguridad y salud de nuestros colaboradores y clientes.",
  },
  {
    title: "Sostenibilidad",
    description:
      "Protección del medio ambiente y promoción del desarrollo sostenible.",
  },
  {
    title: "Innovación",
    description:
      "Desarrollo de soluciones eficientes y tecnológicamente avanzadas.",
  },
  {
    title: "Integridad",
    description: "Actuamos con ética y transparencia en nuestras operaciones.",
  },
];
---

<section id="nosotros" class="bg-gray-50 py-20">
  <div class="mx-auto max-w-6xl px-6 sm:px-8 lg:px-10">
    <div class="space-y-8">
      <div class="space-y-4">
        <p class="text-md font-semibold uppercase tracking-wide text-blue-600">Nosotros</p>
        <div class="space-y-3">
          <h2 class="text-4xl font-semibold tracking-tight text-slate-900 sm:text-5xl">
            Identidad corporativa
          </h2>
          <span class="block h-1 w-16 bg-blue-600"></span>
        </div>
        <p class="mb-6 text-lg leading-relaxed text-slate-600 sm:text-xl">
          Conoce a Talam y la forma en que trabajamos: nuestra historia, propósito y los valores
          que nos guían en cada servicio.
        </p>
      </div>

      <div class="flex flex-wrap gap-3" data-tabs>
        {
          tabs.map((tab) => (
            <button
              type="button"
              data-tab={tab.id}
              class="group inline-flex items-center gap-3 rounded-md border border-gray-100 bg-white px-4 py-2.5 text-sm font-semibold text-slate-700 transition"
              aria-selected={tab.id === "quienes" ? "true" : "false"}
            >
              <span class="flex h-10 w-10 items-center justify-center rounded-md bg-blue-50 text-blue-600 transition">
                {tab.icon === "users" && (
                  <svg
                    viewBox="0 0 24 24"
                    class="h-5 w-5"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M3.75 21h16.5M4.5 3h15M5.25 3v18m13.5-18v18M9 6.75h1.5m-1.5 3h1.5m-1.5 3h1.5m3-6H15m-1.5 3H15m-1.5 3H15M9 21v-3.375c0-.621.504-1.125 1.125-1.125h3.75c.621 0 1.125.504 1.125 1.125V21"
                    />
                  </svg>
                )}
                {tab.icon === "target" && (
                  <svg
                    viewBox="0 0 24 24"
                    class="h-5 w-5"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.6"
                  >
                    <circle cx="12" cy="12" r="7.5" />
                    <circle cx="12" cy="12" r="3.25" />
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M12 3.5V6m8.5 6h-2.5M12 18v2.5M6 12H3.5"
                    />
                  </svg>
                )}
                {tab.icon === "eye" && (
                  <svg
                    viewBox="0 0 24 24"
                    class="h-5 w-5"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.6"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z"
                    />
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
                    />
                  </svg>
                )}
                {tab.icon === "shield" && (
                  <svg
                    viewBox="0 0 24 24"
                    class="h-5 w-5"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.6"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z"
                    />
                  </svg>
                )}
              </span>
              <span class="text-sm sm:text-base">{tab.label}</span>
            </button>
          ))
        }
      </div>

      <div
        class="relative rounded-md border border-gray-100 bg-white p-10"
        data-panels
      >
        <span class="absolute right-0 top-0 h-1 w-20 bg-blue-600"></span>
        <img
          src="/images/talam-logo-white.png"
          alt=""
          aria-hidden="true"
          loading="lazy"
          decoding="async"
          class="pointer-events-none absolute left-1/2 top-1/2 w-72 -translate-x-1/2 -translate-y-1/2 opacity-4 invert brightness-90 sm:w-80 lg:w-96"
        />
        <div data-panel="quienes" class="relative z-10">
          <div class="flex items-center gap-4">
            <span
              class="flex h-14 w-14 items-center justify-center rounded-md bg-blue-50 text-blue-600"
            >
              <svg
                viewBox="0 0 24 24"
                class="h-7 w-7"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3.75 21h16.5M4.5 3h15M5.25 3v18m13.5-18v18M9 6.75h1.5m-1.5 3h1.5m-1.5 3h1.5m3-6H15m-1.5 3H15m-1.5 3H15M9 21v-3.375c0-.621.504-1.125 1.125-1.125h3.75c.621 0 1.125.504 1.125 1.125V21"
                ></path>
              </svg>
            </span>
            <h3 class="text-2xl font-semibold text-slate-900 sm:text-4xl m-0">
              Quiénes somos
            </h3>
          </div>
          <p class="text-base leading-relaxed text-slate-600 sm:text-lg">
            Maquinarias Talam es una empresa 100% mexicana fundada en 2024, enfocada en atender
            al sector energético (oil &amp; gas). Nos mantenemos a la vanguardia con tecnología y
            capacitación continua, elevando la calidad de nuestros servicios. Apoyamos proyectos
            petroleros con soluciones de medición en campo, ya sea renta de equipo o servicio
            integral con operación especializada.
          </p>
        </div>

        <div data-panel="mision" class="relative z-10 hidden">
          <div class="flex items-center gap-4">
            <span
              class="flex h-14 w-14 items-center justify-center rounded-md bg-blue-50 text-blue-600"
            >
              <svg
                viewBox="0 0 24 24"
                class="h-7 w-7"
                fill="none"
                stroke="currentColor"
                stroke-width="1.6"
              >
                <circle cx="12" cy="12" r="7.5"></circle>
                <circle cx="12" cy="12" r="3.25"></circle>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 3.5V6m8.5 6h-2.5M12 18v2.5M6 12H3.5"></path>
              </svg>
            </span>
            <h3 class="text-2xl font-semibold text-slate-900 sm:text-3xl m-0">
              Misión
            </h3>
          </div>
          <p class="text-base leading-relaxed text-slate-600 sm:text-lg">
            Proporcionar servicios de medición de pozos, automatización y
            control, suministro de productos químicos y servicios de
            intervención, con un enfoque en la calidad, seguridad y
            sostenibilidad, para satisfacer las necesidades de nuestros clientes
            y contribuir al desarrollo sostenible de la industria petrolera.
          </p>
        </div>

        <div data-panel="vision" class="relative z-10 hidden">
          <div class="flex items-center gap-4">
            <span
              class="flex h-14 w-14 items-center justify-center rounded-md bg-blue-50 text-blue-600"
            >
              <svg
                viewBox="0 0 24 24"
                class="h-7 w-7"
                fill="none"
                stroke="currentColor"
                stroke-width="1.6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"></path>
              </svg>
            </span>
            <h3 class="text-2xl font-semibold text-slate-900 sm:text-3xl m-0">
              Visión
            </h3>
          </div>
          <p class="text-base leading-relaxed text-slate-600 sm:text-lg">
            Ser líderes en la industria de servicios de medición y
            automatización de pozos petroleros, ofreciendo soluciones integrales
            y personalizadas, con equipos y personal capacitado, garantizando
            calidad, seguridad, salud y protección ambiental.
          </p>
        </div>

        <div data-panel="valores" class="relative z-10 hidden">
          <div class="flex items-center gap-4">
            <span
              class="flex h-14 w-14 items-center justify-center rounded-md bg-blue-50 text-blue-600"
            >
              <svg
                viewBox="0 0 24 24"
                class="h-7 w-7"
                fill="none"
                stroke="currentColor"
                stroke-width="1.6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z"
                ></path>
              </svg>
            </span>
            <h3 class="text-2xl font-semibold text-slate-900 sm:text-3xl m-0">
              Valores
            </h3>
          </div>
          <ul
            class="mt-5 grid gap-4 list-none p-0 text-sm text-slate-600 sm:grid-cols-2 lg:grid-cols-3"
          >
            {
              valores.map((valor) => (
                <li class="relative rounded-md border border-gray-100 bg-gray-50 px-3.5 py-2">
                  <span class="absolute left-0 top-0 h-full w-1 rounded-l-md bg-emerald-500/70" />
                  <div class="pl-2">
                    <p class="text-base font-semibold text-slate-900 m-0">
                      {valor.title}
                    </p>
                    <span class="text-sm leading-relaxed text-slate-600">
                      {valor.description}
                    </span>
                  </div>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  document.querySelectorAll("[data-tabs]").forEach((tabList) => {
    const container = tabList.closest("section");
    const panels = container?.querySelectorAll("[data-panel]");
    const buttons = tabList.querySelectorAll("[data-tab]");

    const setActive = (id) => {
      buttons.forEach((button) => {
        const isActive = button.dataset.tab === id;
        button.setAttribute("aria-selected", isActive ? "true" : "false");
        button.classList.toggle("bg-blue-500", isActive);
        button.classList.toggle("text-white", isActive);
        button.classList.toggle("bg-white", !isActive);
        button.classList.toggle("text-slate-700", !isActive);
        const icon = button.querySelector("span");
        icon?.classList.toggle("bg-blue-400", isActive);
        icon?.classList.toggle("text-white", isActive);
        icon?.classList.toggle("bg-blue-50", !isActive);
        icon?.classList.toggle("text-blue-600", !isActive);
      });
      panels?.forEach((panel) => {
        panel.classList.toggle("hidden", panel.dataset.panel !== id);
      });
    };

    setActive("quienes");
    buttons.forEach((button) => {
      button.addEventListener("click", () => setActive(button.dataset.tab));
    });
  });
</script>
