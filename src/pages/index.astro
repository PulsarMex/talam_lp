---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import AboutTabs from "../components/AboutTabs.astro";
import Services from "../components/Services.astro";

const title = "TALAM | Soluciones de medición petrolera";
const description =
  "Maquinarias TALAM ofrece renta de equipo de medición y servicio completo en campo para operaciones petroleras en el sureste de México.";
---

<BaseLayout title={title} description={description}>
  <Header />
  <main class="bg-white text-slate-900">
    <Hero />
    <AboutTabs />
    <Services />
  </main>
</BaseLayout>